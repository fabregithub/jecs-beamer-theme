	\hbox{%
		\begin{beamercolorbox}[wd=0.98\paperwidth,ht=2.25ex,dp=1ex,left]{footline}%
			\hspace*{1cm}
		\end{beamercolorbox}
		\llap{\includegraphics[height=0.5cm]{images/seal.png}\hspace*{1em}}
	}%
}
