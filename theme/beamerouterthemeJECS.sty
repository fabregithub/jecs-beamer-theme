\RequirePackage{tikz}

\mode<presentation>
% Background for normal frames
\setbeamertemplate{background canvas}{
  \tikz[remember picture,overlay] \node[anchor=north west, inner sep=0pt] at (current page.north west) {
    \includegraphics[width=\paperwidth,height=\paperheight]{images/bg.png}
  };
}


% Frame number in header
\setbeamertemplate{headline}{
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=\paperwidth,ht=4ex,dp=1ex,rightskip=1em]{headline}
      \hfill
      \usebeamercolor[fg]{page number in head/foot}%
      \usebeamerfont{page number in head/foot}%
      \insertframenumber{} / \inserttotalframenumber%
    \end{beamercolorbox}%
  }
}

% Footer with JECS PO Seal
\setbeamertemplate{footline}
{%
	\leavevmode%
	\hbox{%
		\begin{beamercolorbox}[wd=\paperwidth,ht=2.25ex,dp=1ex,left]{footline}%
			\hspace*{1cm}
		\end{beamercolorbox}
		\llap{\includegraphics[height=0.5cm]{images/seal.png}\hspace*{1em}}
	}%
}

% Frame title
\setbeamertemplate{frametitle}
{%
  \begin{tikzpicture}[remember picture,overlay]
    \node[anchor=north west, xshift=0.8cm, yshift=-0.6cm] at (current page.north west) {
      \begin{beamercolorbox}[wd=0.8\paperwidth,ht=2ex,dp=1ex,left]{frametitle}
        \usebeamerfont{frametitle}\insertframetitle%
        \ifx\insertframesubtitle\@empty%
        \else%
          \\[-0.8ex]\usebeamerfont{framesubtitle}\insertframesubtitle%
        \fi%
      \end{beamercolorbox}
    };
  \end{tikzpicture}\vspace{0.5\baselineskip}
}

% customisation for the title page
\setbeamertemplate{title page}
{
    \hspace*{0.52\textwidth}% Adjust this value as needed
    \begin{minipage}{0.75\textwidth} % Adjust width to fit your layout
        \usebeamerfont{title}{\usebeamercolor[fg]{title}\inserttitle}\par
        \medskip
        \usebeamerfont{subtitle}{\usebeamercolor[fg]{subtitle}\insertsubtitle}\par
        \bigskip
        \usebeamerfont{date}\insertdate\par
        \bigskip
        \bigskip
        \usebeamerfont{author}\insertauthor\par
        \medskip
        \usebeamerfont{institute}\insertinstitute\par
    \end{minipage}
}

% Custom title page frame macro
\newcommand{\titleframe}{
  \begingroup
    \setbeamertemplate{background canvas}{
      \tikz[remember picture,overlay] \node[anchor=north west, inner sep=0pt] at (current page.north west) {
        \includegraphics[width=\paperwidth,height=\paperheight]{images/title-bg.png}
      };
    }
    \begin{frame}[plain,noframenumbering]
      \titlepage
    \end{frame}
  \endgroup
}

\mode<all>